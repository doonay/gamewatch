#: kivy 2.0.0
#: import ew kivy.uix.effectwidget
#: import KivyMD kivymd.app.MDApp

<Card@RelativeLayout>:

    #size_hint: 0.97, 0.97
    #spacing: 10

    #pos_hint: {'center_x': .5, 'center_y': .5}



    FloatLayout:
        orientation: 'vertical'
        Label:
            pos_hint: {'x': 0.01, 'y': .05}
            text_size: self.size
            font_size: '20sp'
            halign: 'left'
            valign: 'bottom'
            markup: True
            text: '[b]' + 'Game Name III' + '[/b]'
        Label:
            pos_hint: {'x': 0.01, 'y': .01}
            text_size: self.size
            font_size: '18sp'
            halign: 'left'
            valign: 'bottom'
            markup: True
            text: 'YEAR'

<Img@RelativeLayout>:
    FitImage:
        source: 'assets/bg.jpg'
    FitImage:
        source: 'assets/shadow_bottom.png'
    FitImage:
        source: 'assets/shadow_top.png'
    FitImage:
        source: 'assets/shadow_left.png'
    FitImage:
        source: 'assets/shadow_right.png'




<Screen>: #FloatLayout

    game_img: game_img_wgt
    game_name: game_name_wgt
    list: list_wgt

    FitImage:
        source: 'assets/bg.jpg'

    BoxLayout:
        size_hint: 0.97, 0.97
        pos_hint: {'center_x': .5, 'center_y': .5}
        spacing: 10
        orientation: 'horizontal'
        BoxLayout:
            size_hint: 0.3, 1
            orientation: 'horizontal'
            ScrollView:
                MDList:
                    id: list_wgt


        BoxLayout:
            #size_hint: 0.97, 0.97
            pos_hint: {'center_x': .5, 'center_y': .5}
            spacing: 10
            orientation: 'vertical'

            Card:
                #size_hint: 0.97, 0.97
                #spacing: 10

                #pos_hint: {'center_x': .5, 'center_y': .5}
                FitImage:
                    id: game_img_wgt
                    source: 'assets/bg.jpg'
                FitImage:
                    source: 'assets/shadow_bottom.png'

                BoxLayout:
                    orientation: 'horizontal'
                    FloatLayout:
                        #pos_hint: {'top': 1, 'right': 1}
                        #size_hint: 0.5, 0.5
                        BoxLayout:
                            pos_hint: {'top': 1, 'right': 1}
                            size_hint: 0.5, 0.1
                            Button:
                                background_normal: ''
                                background_color: 1, 0, 0, .85
                                text: 'Delete from base'
                            Button:
                                background_normal: ''
                                background_color: 0, 1, 0, .85
                                text: 'Add for watch'
                FloatLayout:
                    orientation: 'vertical'
                    Label:
                        id: game_name_wgt
                        pos_hint: {'x': 0.01, 'y': .05}
                        text_size: self.size
                        font_size: '20sp'
                        halign: 'left'
                        valign: 'bottom'
                        markup: True
                        text: '[b]' + 'Game Name III' + '[/b]'
                    Label:
                        pos_hint: {'x': 0.01, 'y': .01}
                        text_size: self.size
                        font_size: '18sp'
                        halign: 'left'
                        valign: 'bottom'
                        markup: True
                        text: 'YEAR'


            BoxLayout:
                size_hint: 1, 0.4
                #pos_hint: {'center_x': .5, 'center_y': .5}
                spacing: 10
                orientation: 'horizontal'
                Img:
                    #size_hint: 1, 0.4
                    #text: 'img\nx: 1 y: 0.4'
                Img:
                    #size_hint: 1, 0.4
                    #text: 'img\nx: 1 y: 0.4'
                Img:
                    #size_hint: 1, 0.4
                    #text: 'img\nx: 1 y: 0.4'
